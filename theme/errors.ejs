<%
    const ERRORS = {
        0:{
            name: 'Unknown Error',
            message: 'An unknown error occurred with Dashactyl. Please contact an administrator to resolve this.'
        },
        403:{
            name: 'Unauthorized',
            message: 'You are not permitted to view this page.'
        },
        404:{
            name: 'Not Found',
            message: 'The requested page could not be found.'
        },
        500:{
            name: 'Internal Error',
            message: 'An unknown error occurred with Dashactyl. Please contact an administrator to resolve this.'
        }
    }

    const res = ERRORS[code] || ERRORS[0];
%>

    <%- include("./components/head.ejs", {title: res.name, description: "Internal Error" }) %>
    <div style="position: absolute;left: 50%;top: 50%;transform: translate(-50%, -50%);border: 5px;padding: 10px; border-radius: 25px;background-color: aliceblue;">
        <center>
            <h1><%= code %> | <%= res.name %></h1>
            <p><%= res.message %></p>
            <% if (message) { %>
                <p><%= message %></p>
            <% } %>
            <% if (Number(code) >= 500 && invite) { %>
                <button onclick="window.location.href = '<%= invite %>'">Contact Administrators</button><br>
            <% } %>
            <button onclick="window.location.href = '/dashboard'">Go Back</button>
        </center>
    </div>
    </body>
</html>
